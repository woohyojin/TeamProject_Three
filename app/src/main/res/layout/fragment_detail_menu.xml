<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top">

        <ImageView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:src="@drawable/testimg"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/menu_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="메뉴이름"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/nutrition_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="제품 영양정보"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/nutrition_info_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영양정보 내용"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp"/>

        <TextView
            android:id="@+id/allergy_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제품 알레르기 정보"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/allergy_info_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="알레르기 내용"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>

    </LinearLayout>


</RelativeLayout>